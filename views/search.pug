extends default

block content
  header
    div(class="container-fluid")
      a.logo(href='/') GitHub API
      div(class="row justify-content-md-center")
        div(class="col-md-auto")
          form(action='/search' method='GET' class="form-inline mx-auto")
            div(class="form-row align-items-center")
                  div(class="col-auto")
                    //input(class="form-control mb-5" autofocus='' placeholder='Search' type='search' name='q')
                    input(id="ownerInput" class="form-control mb-5" type="text" name="owner" placeholder="GitHub Repo Owner" value="nodejs")
                  div(class="col-auto")
                    input(id="repoInput" class="form-control mb-5" type="text" name="repo" placeholder="GitHub Repo Name" value="node")
                  div(class="col-auto")
                    input(id="submit" type="submit" class="btn btn-primary ml-2 mb-5" value="Submit")
   

  div(class="row justify-content-md-center")
    div(class="col-md-auto")
      if !searchResults
        .result-count
          p No results found for your query:
          |
          strong #{searchQuery}
      else
        ul(id="repoPulls" class="list-group mx-auto mb-5" style="width: 500px")
          each pullRequest in searchResults
            li(class="list-group-item")
              p.font-weight-bold Title: 
                p #{pullRequest.title}
              p State: #{pullRequest.state}
              p Created: #{pullRequest.created_at}
              p State: #{pullRequest.url}
              
              



    
        