extends default

block content
  div(class="container-fluid")
    <div class="row justify-content-md-center">
      <div class="col-md-auto">
        img(src="/images/GitHub-Mark-120px-plus.png" width="250" height="250" class="p-4 rounded mx-auto d-block")
    
    <div class="row justify-content-md-center">
      <div class="col-md-auto">
        h3(class="text-center mt-5") GitHub API
    
    <div class="row justify-content-md-center">
      <div class="col-md-auto">
        form(action='/search' method='GET' class="form-inline mx-auto")
          div(class="form-row align-items-center")
                div(class="col-auto")
                  //input(class="form-control mb-5" autofocus='' placeholder='Search' type='search' name='q')
                  input(id="ownerInput" class="form-control mb-5" type="text" name="owner" placeholder="GitHub Repo Owner" value="nodejs")
                div(class="col-auto")
                  input(id="repoInput" class="form-control mb-5" type="text" name="repo" placeholder="GitHub Repo Name" value="node")
                div(class="col-auto")
                  input(id="submit" type="submit" class="btn btn-primary ml-2 mb-5" value="Submit")
    <div class="row justify-content-md-center">
      <div class="col-md-auto">
        ul(id="repoPulls" class="list-group mx-auto mb-5" style="width: 500px")